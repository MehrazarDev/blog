<section class="section-gap">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <!--comments area start-->
        <div class="comments">
          <h2 class="comments-title"> نظرات</h2>
          <ul>
            {{#each post.comments}}
            <li class="comment ">
              <article class="comment-body">
                <footer class="comment-meta">
                  <div class="comment-author">
                    <img alt="" src="/static/assets/img/team/t-1.jpg" class="">
                    <b class="fn">
                      <a href="#" rel="external nofollow" class="url">
                        {{this.user_name}}
                      </a>
                    </b>
                    <span class="says">گفته:</span>
                  </div>
                  <!-- .comment-author -->

                  <div class="comment-metadata">
                    <a href="#">
                      <time datetime="">
                        {{#getJalaliCreatedAt this}} {{/getJalaliCreatedAt}}
                      </time>
                    </a>
                  </div><!-- .comment-metadata -->

                </footer><!-- .comment-meta -->

                <div class="comment-content">
                  <p>{{this.comment}}</p>
                </div><!-- .comment-content -->

                <div class="reply">
                  <a rel="nofollow" class="comment-reply-link" href="#">پاسخ</a>
                </div>
              </article><!-- .comment-body -->
            {{/each}}
          </ul>
        </div>
        <!--comments area end-->

        <!--comment form start-->
        <div class="comment-respond">
          <h3 class="comment-reply-title mb-lg-5 mb-4">
            نظر بدهید
          </h3>
          {{#if success}}
            <div class="alert alert-solid-success alert-dismissible fade show" role="alert">
              {{success}}
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
              </button>
            </div>
          {{/if}}
          {{#if errors}}
            <div class="alert alert-solid-success alert-dismissible fade show" role="alert">
              {{#each errors}}
                <li>{{this}}</li>
              {{/each}}
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
              </button>
            </div>
          {{/if}}
          <form role="form" class="comment-form" action="/p/{{post.slug}}/comment" method="POST">
            <div class="row">
              <div class=" col-md-4">
                <div class="form-group">
                  <input type="text" name="user_name" class="form-control" placeholder="نام*" required="">
                </div>
              </div>
              <div class=" col-md-4">
                <div class="form-group ">
                  <input type="email" name="user_email" class="form-control" placeholder="ایمیل*" required="">
                </div>
              </div>
              <div class=" col-md-4">
                <div class="form-group ">
                  <input type="text" name="user_url" class="form-control" placeholder="وب سایت">
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="controls">
                <textarea id="message" name='user_comment' rows="5" placeholder="نظر*" class="form-control"
                          required=""></textarea>
              </div>
            </div>
            <p class="text-muted">آدرس ایمیل شما منتشر نخواهد شد. فیلدهای مورد نیاز علامت گذاری شده اند *</p>
            <div class="text-center mt-md-5">
              <button type="submit" class="btn btn-theme">ارسال</button>
            </div>
          </form>
        </div>
        <!--comment form end-->
      </div>
    </div>
  </div>
</section>
