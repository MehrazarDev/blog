<!--page title start-->
<section class="section-gap pb-0">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-12">
        <section class="section-gap px-lg-5">
          <div class="hero-img bg-overlay rounded overflow-hidden" data-overlay="2"
               style="background-image: url(/static/assets/img/blog/b1.jpg);"></div>
          <div class="container">
            <div class="row align-items-center text-white">
              <div class="col-md-8">
                <h3 class="">{{post.title}}</h3>
                <div class="meta font-lora my-4 text-white">
                  <a href="#">{{post.full_name}}</a>
                  <span class="meta-separator"></span>
                  <a href="#">{{#getJalaliCreatedAt post}} {{/getJalaliCreatedAt}}</a>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
</section>
<!--page title end-->

<!--blog start-->
<section class="section-gap pb-0">
  <div class="container">
    <div class="row justify-content-center ">
      <div class="col-lg-8">
        <div class="blog-post border-0 blog-single">
       <p>{{post.content}}</p>
      </div>
    </div>
  </div>
  </div>
</section>
<hr>
{{>author this}}
<hr>
{{>comments this}}
<!--blog end-->

