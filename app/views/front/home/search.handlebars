{{#each posts}}
  <div class="blog-post">
    <a href="#"><img class="rounded mb-lg-5 mb-4" src="/static/uploads/thumbnails/{{this.thumbnail}}" alt="card image" /></a>
    <h3 class=""><a href="/p/{{this.slug}}">{{this.title}}</a></h3>
    <div class="meta font-lora my-4">
      <a href="#">{{this.full_name}}</a>
      <span class="meta-separator"></span>
      <a href="#">{{#getJalaliCreatedAt this}} {{/getJalaliCreatedAt}}</a>
    </div>
    <p>{{#getExcerpt this}} {{/getExcerpt}}</p>
  </div>
{{/each}}
